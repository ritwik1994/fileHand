<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Candidate Information :"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:id="@+id/simpleText"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameCandidate"
            android:layout_marginTop="15dp"
            android:theme="@style/TextLabelForEdittextForLogin"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/simpleText"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="Candidates's Name"
                android:id="@+id/candidateNameText"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailAddress"
            android:layout_marginTop="15dp"
            android:theme="@style/TextLabelForEdittextForLogin"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/nameCandidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/emailText"
                android:textColorHint="@color/black"
                android:hint="Candidates's Email address"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/companyName"
            android:layout_marginTop="15dp"
            android:theme="@style/TextLabelForEdittextForLogin"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/nameCompanyText"
                android:textColorHint="@color/black"
                android:hint="Candidates's current company name"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please explain the nature of abuse :"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/companyName"
            android:textColor="@color/black"
            android:id="@+id/simpleTextanother"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="200dp"
            android:id="@+id/nature"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingRight="10dp"
            android:background="@drawable/edit_box"
            android:theme="@style/TextLabelForEdittextForLogin"
            android:layout_below="@+id/simpleTextanother"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/ExtraBlue"
            android:hint="Please Write here ..."
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/nature"
            android:id="@+id/reportAbuse"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Post"
            android:textColor="@color/WHITE"
            android:background="@drawable/report_abuse"
            android:layout_marginBottom="20dp"
            />


    </RelativeLayout>

</ScrollView>